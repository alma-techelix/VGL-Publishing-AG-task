# Development Environment (Cost Optimized)
environment = "dev"
aws_region  = "us-east-1"

# Cost optimization for development
enable_nat_gateway         = false  # Save ~$45/month, use VPC endpoints
enable_multi_az           = false   # Save ~$60/month
enable_deletion_protection = false  # Allow easy cleanup

# Smaller instances for development
backend_cpu    = 256
backend_memory = 512
frontend_cpu   = 256
frontend_memory = 512
desired_count  = 1

# Database
db_instance_class     = "db.t3.micro"
db_allocated_storage  = 20

# Container images (replace with your ECR URIs)
# backend_image  = "123456789012.dkr.ecr.us-east-1.amazonaws.com/vgl-backend:latest"
# frontend_image = "123456789012.dkr.ecr.us-east-1.amazonaws.com/vgl-frontend:latest"
